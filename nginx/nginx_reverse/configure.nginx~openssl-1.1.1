OPENSSL_LINK="https://github.com/openssl/openssl/archive/master.tar.gz"; # OpenSSL 1.1.1-dev
wget ${OPENSSL_LINK} -O openssl-master.tar.gz;
tar -zxvf openssl-master.tar.gz;
PWD=`pwd`;
OPENSSL_DIR=`find ${PWD} -type d -name openssl-master`;
./configure \
	"--user=nginx" \
	"--group=nginx" \
	"--prefix=/usr" \
	"--sbin-path=/usr/sbin" \
	"--conf-path=/etc/nginx/nginx.conf" \
	"--pid-path=/var/run/nginx.pid" \
	"--http-log-path=/var/log/nginx/access_log" \
	"--error-log-path=/var/log/nginx/error_log" \
	"--with-ipv6" \
	"--without-mail_imap_module" \
	"--without-mail_smtp_module" \
	"--with-http_ssl_module" \
	"--with-http_realip_module" \
	"--with-http_stub_status_module" \
	"--with-http_gzip_static_module" \
	"--with-http_dav_module" \
	"--with-cc-opt='-D FD_SETSIZE=32768'" \
	"--with-openssl=${OPENSSL_DIR}"
